<%- include("template/header", {tituloWeb: 'Nueva Prenda' }) %>
    <div class="container">
        <h1 style="text-align: center;">Añadir nueva Prenda</h1>
        <form action="/ropa" class="my-2" method="POST">
            <label>Imagen</label>
            <input type="file" class="form-control my-2" name="imagen">
            <label>Talla</label>
            <input type="text" placeholder="Talla" class="form-control my-2" name="talla">
            <label>Descripción</label>
            <input type="text" placeholder="Descripción" class="form-control my-2" name="descripcion">
            <label>Precio</label>
            <input type="number" placeholder="Precio" class="form-control my-2" step="0.01" min="0" name="precio">
            <br>
            <button type="submit" class="btn btn-dark btn-block">Agregar</button>
            <a class="btn btn-danger btn-block my-4" href="/ropa">Cancelar</a>
        </form>
    </div>
        
